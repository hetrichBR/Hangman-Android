<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.hang.soreal.hangman.Multiplayer"
    android:background="@drawable/gradient_background">

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:maxLength="10"
        android:hint="Enter a word"
        android:textColorHint="#FFFFFF"
        android:id="@+id/ETmultiword"
        android:textColor="@color/word_color"
        android:inputType="textCapWords"
        android:typeface="serif"
        android:textStyle="bold"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Play"
        android:layout_marginTop="88dp"
        android:id="@+id/Bplaymult"
        android:onClick="play"
        android:background="@drawable/button"
        android:textColor="@color/main_color"
        android:layout_below="@+id/ETmultiword"
        android:layout_centerHorizontal="true"
        android:typeface="serif"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Multiplayer"
        android:id="@+id/TVmult"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="70dp"
        android:textColor="@color/main_color"
        />

</RelativeLayout>
